{
    "manifest_version": 3,
    "name": "Download YouTube Video Thumbnails",
    "version": "1.0.0",
    "description": "A browser extension that downloads YouTube video thumbnails",
    "icons": {
        "16": "assets/images/icon-16x16.png",
        "32": "assets/images/icon-32x32.png",
        "48": "assets/images/icon-48x48.png",
        "128": "assets/images/icon-128x128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "assets/images/icon-16x16.png",
            "32": "assets/images/icon-32x32.png",
            "48": "assets/images/icon-48x48.png",
            "128": "assets/images/icon-128x128.png"
        }
    },
    "permissions": [
        "activeTab",
        "downloads"
    ],
    "host_permissions": [
        "https://www.youtube.com/*",
        "https://m.youtube.com/*",
        "https://i.ytimg.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*",
                "https://m.youtube.com/*"
            ],
            "js": ["dist/content.js"]
        }
    ]
}
